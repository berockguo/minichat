# Makefile
#
# Generated by phxrpc_pb2server from minichat.proto
#
#

include ../../comm.mk
include ../../phxrpc/phxrpc.mk

CFLAGS += -I$(MINICHAT_ROOT)/minichat

LDFLAGS := -L$(PHXRPC_ROOT)/lib \
	-L$(MINICHAT_ROOT)/minichat/msgbox -lmsgbox_client \
	-lphxrpc $(LDFLAGS)

#choose to use boost for network
#LDFLAGS := $(PLUGIN_BOOST_LDFLAGS) $(LDFLAGS)

CGI_OBJS = cgi_base.o cgi_sendmsg.o

SVR_OBJS = minichat.pb.o \
		   minichat_service_impl.o \
		   phxrpc_minichat_service.o \
		   phxrpc_minichat_dispatcher.o \
		   minichat_server_config.o \
		   minichat_main.o \
		   $(CGI_OBJS)

CLI_OBJS = minichat.pb.o \
		   minichat_client.o \
		   phxrpc_minichat_stub.o

TARGETS = libminichat_client.a minichat_main minichat_tool_main

all: $(TARGETS)

minichat_main: $(SVR_OBJS)
	$(LINKER) $^ $(LDFLAGS) -o $@

libminichat_client.a: $(CLI_OBJS)
	$(AR) $@ $^

minichat_tool_main: phxrpc_minichat_tool.o minichat_tool_impl.o minichat_tool_main.o
	$(LINKER) $^ -L. -lminichat_client $(LDFLAGS) -o $@

########## message ##########

minichat.pb.cc: minichat.pb.h

minichat.pb.h: minichat.proto
	$(PROTOBUF_ROOT)/bin/protoc -I$(PROTOBUF_ROOT)/include --cpp_out=. -I$(PHXRPC_ROOT) -I. $^

########## client ##########

phxrpc_minichat_stub.cpp: phxrpc_minichat_stub.h
phxrpc_minichat_stub.o: phxrpc_minichat_stub.h
minichat_client.cpp: phxrpc_minichat_stub.h
minichat_client.o: phxrpc_minichat_stub.h

phxrpc_minichat_stub.h: minichat.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2client $(PBFLAGS) -f $^ -d .

########## service ##########

phxrpc_minichat_service.cpp: phxrpc_minichat_service.h
phxrpc_minichat_service.o: phxrpc_minichat_service.h
minichat_service_impl.cpp: phxrpc_minichat_service.h
minichat_service_impl.o: phxrpc_minichat_service.h
phxrpc_minichat_dispatcher.cpp: phxrpc_minichat_service.h
phxrpc_minichat_dispatcher.o: phxrpc_minichat_service.h

phxrpc_minichat_service.h: minichat.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2service $(PBFLAGS) -f $^ -d .

########## tool ##########

phxrpc_minichat_tool.cpp: phxrpc_minichat_tool.h
phxrpc_minichat_tool.o: phxrpc_minichat_tool.h
minichat_tool_impl.cpp: phxrpc_minichat_tool.h
minichat_tool_impl.o: phxrpc_minichat_tool.h
minichat_tool_main.cpp: phxrpc_minichat_tool.h
minichat_tool_main.o: phxrpc_minichat_tool.h

phxrpc_minichat_tool.h: minichat.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2tool $(PBFLAGS) -f $^ -d .

clean:
	@($(RM) $(TARGETS))
	@($(RM) *.o)
	@($(RM) phxrpc_*)
	@($(RM) *.pb.*)

